<%- include('includes/header.ejs') %>

  <div class="container mb-3" style="width: 30vw; margin-top: 10vh;">
    <h1>Update account Details</h1>
    <b>
      <hr>
    </b>
    <form action="/update-profile" method="post">
      <form>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Name</label>
          <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="name"
            value="<%=data.name%>">
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Email address</label>
          <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email"
            value="<%=data.email%>">
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Phone number</label>
          <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="phone"
            value="<%=data.phone%>">
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Enter new Password</label>
          <input type="password" class="form-control" id="exampleInputPassword1" name="password">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </form>
  </div>

  <%- include('includes/footer.ejs') %>